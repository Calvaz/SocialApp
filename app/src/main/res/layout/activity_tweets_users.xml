<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendWazzi"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:alpha="0.5"
        app:srcCompat="@mipmap/bird" />

    <EditText
        android:id="@+id/edtTweet"
        android:layout_width="336dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Send a tweet..."
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSendTweet"
        android:layout_width="183dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="Send tweet"
        android:textColor="#fff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnShowTweets"
        android:layout_width="192dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="40dp"
        android:background="#80B2F9"
        android:text="Show tweets"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/listTweetView"
        android:layout_width="395dp"
        android:layout_height="310dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />
</LinearLayout>